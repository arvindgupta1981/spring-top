<?xml version="1.0" encoding="UTF-8"?> 
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>

	<bean id="calculator" class="au.com.arv.aop.Calculator" />
	<bean id="myAdvice" class="au.com.arv.aop.advice.MyAdvice" />
	
	<bean id="calculatorProxy" class="org.springframework.aop.framework.ProxyFactoryBean">
		<property name="proxyInterfaces">
			<value>au.com.arv.aop.CalculatorIntf</value>
		</property>
		<property name="target">
			<ref local="calculator" />
		</property>
		<property name="interceptorNames">
			<list>
				<value>theTracingAdvisor</value>
			</list>
		</property>
	</bean>

	<bean id="theTracingAdvisor"
		class="org.springframework.aop.support.RegexpMethodPointcutAdvisor">
		<property name="advice">
			<ref local="myAdvice" />
		</property>
		<property name="pattern">
			<value>.*</value>
		</property>
	</bean>
	
</beans>